<!-- Search form -->
<%= form_tag controller: "home", action: "index" do %>
  <%= search_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @hits %>
  <% @hits.each do |hit, course| %>
    <%= hit.score %> 
    <%= course.primary_department.abbreviation %> 
    <%= course.number %> 
    <%= course.title %>
    <br>
  <% end %>
<% end %>

<!-- Display search results on same page -->
<% if @results %>
  <% @results.each do |course| %>
    <b><%= course.primary_department.abbreviation %> <%= course.number %></b> 
    <i><%= course.title %></i>
    <br>
  <% end %>
<% end %>